<Window
    x:Class="WinFolderAlias.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WinFolderAlias"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    Icon="/Images/win-folder-alias-app.png"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Width="256"
            MinHeight="48"
            Margin="20,20,20,10"
            AllowDrop="True"
            Click="Button_Click"
            Content="{Binding ButtonModel.ButtonText}"
            DragEnter="DragFolderEnter"
            DragLeave="DragFolderLeave" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Row="0"
                Grid.Column="0"
                MinWidth="192"
                Margin="20,10,20,20"
                Foreground="{Binding TextBoxModel.AliasTextColor}"
                GotFocus="TextBox_GotFocus"
                KeyDown="TextBoxKeyDown"
                LostFocus="TextBoxLostFocus"
                PreviewMouseDown="TextBox_PreviewMouseDown"
                Text="{Binding TextBoxModel.AliasText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                MinWidth="48"
                Margin="20,10,20,20"
                Click="ApplicationButtonClick"
                Content="应用" />
        </Grid>
    </Grid>

</Window>
